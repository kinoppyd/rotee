<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :pointer, style: "display: block" %>
    <%= form.number_field :pointer %>
  </div>

  <div>
    <%= form.label :cycle, style: "display: block" %>
    <%= form.number_field :cycle %>
  </div>

  <div>
    <%= form.label :next_trigger_at, style: "display: block" %>
    <%= form.datetime_field :next_trigger_at %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
