<%= turbo_frame_tag dashboard do %>
  <div id="<%= dom_id dashboard %>" class="container m-4">
    <% if dashboard.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(dashboard.errors.count, "error") %> prohibited this dashboard from being saved:</h2>

        <ul>
          <% dashboard.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: dashboard) do |form| %>
  
      <div class="flex">
        <div class="text-6xl font-bold grow text-slate-700">
          <%= form.text_field :title, placeholder: "Dashboard title" %>
        </div>
        <div class="flex items-center">
          <%= button_tag type: "submit" do %>
            <i class="fa-solid fa-check fa-2xl"></i>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="flex flex-wrap" id="<%= "dashboard_lists_#{dashboard.id}"%>">
      <% dashboard.lists.each do |list| %>
        <div class="w-96 m-4" id="list_<%= list.id %>_wrapper">
          <%= render 'lists/list', list: list %>
        </div>
      <% end %>
      <%= turbo_frame_tag "new_dashboard_#{dashboard.id}_list", class: "w-96 m-4" %>
    </div>
  </div>
<% end %>