<%= turbo_frame_tag item do %>
  <div id="<%= dom_id item %>" class="flex my-2 p-1 w-auto h-10 <%= item.position == item.list.pointer ? "bg-sky-300" : "" %>">
    <p class="text-lg text-slate-600 grow"><%= item.name %></p>
    <div class="ml-2">
      <%= link_to edit_list_item_path(item.list, item) do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </div>
    <div class="ml-2">
      <%= button_to list_item_path(item.list, item), method: :delete do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
<% end %>
